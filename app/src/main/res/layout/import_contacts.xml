<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#011216"
    android:layout_height="match_parent">

    <TextView
        android:background="@drawable/theme_green_rect"
        android:paddingHorizontal="20sp"
        android:paddingVertical="10sp"
        android:layout_marginTop="20sp"
        android:id="@+id/Import"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans"
        android:text="Import contacts"
        android:textSize="15sp"
        android:textColor="@color/white"/>
    <TextView

        android:layout_marginTop="10sp"
        android:layout_below="@+id/Import"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:text="Note: Only registered users will be imported."
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="20sp"
        android:textColor="#CEC7BF"/>
</RelativeLayout>