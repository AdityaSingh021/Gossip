<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:id="@+id/oppoLayout"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/oppoMessage"
                android:background="@drawable/recieve_msg"
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="This is opponent message"/>


            <TextView
                android:id="@+id/oppoMsgTime"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="25-01-2023 10:30 PM"/>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/MyLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/myMessage"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:background="@drawable/send_msg"
                android:padding="20dp"
                android:text="This is my message"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/myMsgTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:paddingStart="20dp"
                android:text="25-01-2023 10:30 PM"
                android:textColor="@color/black"
                android:textSize="10sp" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>