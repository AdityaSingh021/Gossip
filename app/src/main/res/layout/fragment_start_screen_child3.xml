<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Start_screen_child3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat without revealing your Identity"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discover new people and make new friends by exploring different hashtags, or create your own hashtags to start conversations on topics you're interested in."
                android:textColor="@color/white"
                android:textSize="15dp"
                android:lineSpacingExtra="10dp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-40dp"
                    android:elevation="1dp"
                    android:src="@drawable/boarding_screen_1_ava2" />

            </RelativeLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/yellow_rect1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="A global platform to connect and chat with friends."
                android:textColor="#002B0C"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Chat with random people worldwide in real-time.."
                android:textColor="#4B4B4B"
                android:textSize="16dp"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:id="@+id/getStarted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="90dp"
                app:cardBackgroundColor="#F0E4C8"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="90dp"
                    android:layout_marginVertical="15dp"
                    android:text="Get started"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </LinearLayout>

</FrameLayout>